{
  "manifest_version": 2,
  "name": "Quill",
  "version": "1.2.0",
  "description": "Extension Thunderbird pour traiter vos emails avec Claude (Anthropic), GPT (OpenAI) ou Ollama (local) - Résumer, traduire, corriger et rédiger des réponses.",
  "author": "Supersonique Studio SARL (fork de Aify par Ali Raheem)",
  "homepage_url": "https://github.com/mikecastrodemaria/Quill",
  "browser_specific_settings": {
    "gecko": {
      "id": "quill@supersoniquestudio.com",
      "strict_min_version": "78.0"
    }
  },
  "icons": {
    "64": "/images/icon-64px.png",
    "32": "/images/icon-32px.png",
    "16": "/images/icon-16px.png"
  },
  "permissions": ["menus", "storage", "compose"],
  "options_ui": {
    "page": "/html/settings.html",
    "open_in_tab": true
  },
  "compose_action": {
    "default_title": "Quill",
    "default_icon": "/images/icon-64px.png",
    "default_popup": "/html/actions.html"
  },
  "background": {
    "scripts": ["/background.js"]
  }
}
